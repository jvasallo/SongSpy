<center>
<h1>Find That Pesky Album</h1>

<%= form_tag search_albums_path, :method => 'get' do %>
<p>
<%= label_tag :search_text %>
<%= text_field_tag :search_text, params[:search_text] %>
<%= submit_tag 'Search' %>
</p>
<% end %>

<% if @albums %>

<table>
  <tr>
    <th>Name</th>
    <th>Length</th>
    <th>Release date</th>
    <th>Artist</th>
    <th>Label</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @albums.each do |album| %>
  <tr>
    <td><%= link_to album.name, album %></td>
    <td><%= album.length %></td>
    <td><%= album.release_date %></td>
    <td><%= link_to album.artist.name, album.artist %></td>
    <td><%= link_to album.label.name, album.label %></td>
<% if current_user %>
    <td><%= link_to 'Show', album %></td>
    <td><%= link_to 'Edit', edit_album_path(album) %></td>
    <td><%= link_to 'Destroy', album, method: :delete, data: { confirm: 'Are you sure?' } %></td>
<% end %>
  </tr>
<% end %>
</table>
</center>

<% end %>
