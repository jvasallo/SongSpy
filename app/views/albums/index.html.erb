<h1>You want it all...</h1>
<table>
  <tr>
    <th>Name</th>
    <th>Artist</th>
    <th>Label</th>
    <th></th>
    <th></th>
  </tr>

<% @albums.each do |album| %>
  <tr>
    <td><%= link_to album.name, album %></td>
    <td><%= link_to album.artist.name, album.artist %></td>
    <td><%= link_to album.label.name, album.label %></td>
<% if current_user %>
    <td><%= link_to 'Edit', edit_album_path(album) %></td>
    <td><%= link_to 'Destroy', album, method: :delete, data: { confirm: 'Are you sure?' } %></td>
<% end %>
  </tr>
<% end %>
</table>

<br />
<% if current_user %>
<%= link_to 'New Album', new_album_path %>
<% end %>
