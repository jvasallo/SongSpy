<h1>You want it all...</h1>
<table>
  <tr>
    <th>Name</th>
    <th>Artist</th>
    <th>Label</th>
    <th></th>
    <th></th>
  </tr>

<% @albums.each do |album| %>
  <tr id="album-<%= album.id %>">
    <td id="album_pic-<%= album.id %>"><%= link_to album.name, album %></td>
    <td><%= link_to album.artist.name, album.artist %></td>
    <td><%= link_to album.label.name, album.label %></td>
<% if current_user %>
    <td class="fade"><%= link_to 'Edit', edit_album_path(album) %></td>
    <td class="fade"><%= link_to 'Destroy', album, method: :delete, remote: true, data: { confirm: 'Are you sure?' } %></td>
<% end %>
  </tr>
<% end %>
</table>

<br />
<% if current_user %>
<%= link_to 'New Album', new_album_path %>
<% end %>

<script>
$("[id^=album-]").hover(
  function () {
    $(this).append($("<span>  View Album</span>"));
  },
  function () {
    $(this).find("span:last").remove();
  }
);
 
//li with fade class
$("td.fade").hover(function(){$(this).fadeOut(100);$(this).fadeIn(500);});
</script>
