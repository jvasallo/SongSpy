<h1>Listing songs</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Rating</th>
    <th>Length</th>
    <th>Lyrics</th>
    <th>Album</th>
    <th>Genre</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @songs.each do |song| %>
  <tr>
    <td><%= song.name %></td>
    <td><%= song.rating %></td>
    <td><%= song.length %></td>
    <td><%= song.lyrics %></td>
    <td><%= song.album_id %></td>
    <td><%= song.genre_id %></td>
    <td><%= link_to 'Show', song %></td>
    <td><%= link_to 'Edit', edit_song_path(song) %></td>
    <td><%= link_to 'Destroy', song, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

