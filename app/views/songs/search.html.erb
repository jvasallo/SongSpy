<center>
<h1>Song Spy</h1>

<%= form_tag search_songs_path, :method => 'get' do %>
  <p>
    <%= label_tag :search_text %>
    <%= text_field_tag :search_text, params[:search_text] %>
    <%= submit_tag 'Search' %>
  </p>
<% end %>

<% if @songs %>
  <table>
    <tr>
      <th>Name</th>
      <th>Album</th>
      <th>Lyrics</th>
      <th></th>
      <th></th>
    </tr>

  <% @songs.each do |song| %>
    <tr>
      <td><%= link_to song.name, song %></td>
      <td><%= link_to song.album.name, song.album %></td>
      <td><%= song.lyrics %></td>
<% if current_user %>
      <td><%= link_to 'Edit', edit_song_path(song) %></td>
      <td><%= link_to 'Destroy', song, method: :delete, data: { confirm: 'Are you sure?' } %></td>
<% end %>
    </tr>
  <% end %>
  </table>
  </center>
<% end %>
